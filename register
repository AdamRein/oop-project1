    /**
     * @param args the command line arguments
     */
    public Register(List<Course> courseOfList) {
        this.courseOfList = courseOfList;
        initComponents();
    }

    public void registerStudent(String studentName, String courseName) {
        for (Student student : studentList) {
            if (student.getName().equals(studentName)) {
                for (Course course : courseOfList) {
                    if (course.getName().equals(courseName)) {
                        if (course.getStudentList().contains(student)) {
                            break;
                        } else {
                            student.getCourse_list().add(course);
                        }
                    }
                }
            }
        }
    }

    public void registerInstructor(String instructorName, String courseName) {
        for (Instructor instructor : instructorList) {
            if (instructor.getName().equals(instructorName)) {
                for (Course course : courseOfList) {
                    if (course.getName().equals(courseName)) {
                        if (course.getStudentList().contains(instructor)) {
                            break;
                        } else {
                            instructor.getCourse_list().add(course);
                        }
                    }
                }
            }
        }
    }


    public static void main(String args[]) {
